<UserControl x:Class="Coin.CRUD.Vehicles.VehicleListItem.Card"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Coin.CRUD.Vehicles.VehicleListItem"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <md:Card>
        <DockPanel>
            <Image DockPanel.Dock="Top"></Image>
            <StackPanel>
                <TextBlock Name="Registration" Style="{StaticResource MaterialDesignBody2TextBlock}"></TextBlock>
                <TextBlock Name="Name" Style="{StaticResource MaterialDesignBody1TextBlock}"></TextBlock>
                <TextBlock Name="Make" Style="{StaticResource MaterialDesignBody1TextBlock}"></TextBlock>
                <TextBlock Name="Model" Style="{StaticResource MaterialDesignBody1TextBlock}"></TextBlock>
                <TextBlock Name="VehicleTypeName" Style="{StaticResource MaterialDesignBody1TextBlock}"></TextBlock>
            </StackPanel>
        </DockPanel>
    </md:Card>
</UserControl>
