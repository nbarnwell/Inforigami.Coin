<UserControl x:Class="Coin.Shell.AppBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Coin.Shell"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel>
        <md:PopupBox DockPanel.Dock="Right" PlacementMode="BottomAndAlignRightEdges" StaysOpen="False">
            <StackPanel>
                <Button x:Name="RefreshData" cal:Message.Attach="RefreshData">Refresh</Button>
            </StackPanel>
        </md:PopupBox>
        <TextBlock VerticalAlignment="Center" Style="{StaticResource MaterialDesignTitleTextBlock}">Coin</TextBlock>
    </DockPanel>
</UserControl>
