@page
@model Coin.Web.Pages.People.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].Household)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person[0].UserAccount)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Person) {
            <tr class="cursor-hand" data-href="@Url.Page("Details", new { id = item.Id })">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Household.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserAccount.Username)
            </td>
        </tr>
}
    </tbody>
</table>
