@page
@model Coin.Web.Areas.Accounting.Pages.Budgets.BudgetItems.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create" asp-route-budgetId="@Model.BudgetId">Create New</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BudgetItem[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BudgetItem[0].AccountId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BudgetItem[0].TransactionDescriptionMatchPattern)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BudgetItem[0].AmountLower)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BudgetItem[0].AmountUpper)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BudgetItem[0].BankSpecificTransactionType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BudgetItem[0].Budget)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BudgetItem[0].TimePeriod)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.BudgetItem) {
            <tr class="cursor-hand" data-href="@Url.Page("Details", new { id = item.Id })">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransactionDescriptionMatchPattern)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountLower)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountUpper)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BankSpecificTransactionType.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Budget.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimePeriod.Name)
            </td>
        </tr>
}
    </tbody>
</table>
