@page
@model Coin.Web.Areas.Accounting.Pages.Currencies.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Currency</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Currency.Id" class="control-label"></label>
                <input asp-for="Currency.Id" class="form-control" />
                <span asp-validation-for="Currency.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Currency.Code" class="control-label"></label>
                <input asp-for="Currency.Code" class="form-control" />
                <span asp-validation-for="Currency.Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Currency.Name" class="control-label"></label>
                <input asp-for="Currency.Name" class="form-control" />
                <span asp-validation-for="Currency.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
