@page
@model Coin.Web.Areas.Accounting.Pages.BankAccounts.IndexModel

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BankAccount[0].CreditLimit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BankAccount[0].AccountNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BankAccount[0].SortCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BankAccount[0].Account)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BankAccount[0].Bank)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.BankAccount) {
            <tr class="cursor-hand" data-href="@Url.Page("Details", new { id = item.Id })">
            <td>
                @Html.DisplayFor(modelItem => item.CreditLimit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SortCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Account.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bank.Name)
            </td>
        </tr>
}
    </tbody>
</table>
