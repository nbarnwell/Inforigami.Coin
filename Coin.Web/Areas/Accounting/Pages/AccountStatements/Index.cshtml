@page
@model Coin.Web.Areas.Accounting.Pages.AccountStatements.IndexModel

@{
    ViewData["Title"] = "AccountStatement Index";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AccountStatement[0].PeriodStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountStatement[0].PeriodEnd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountStatement[0].StartingBalance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountStatement[0].Account)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.AccountStatement) {
            <tr class="cursor-hand" data-href="@Url.Page("Details", new { id = item.Id })">
            <td>
                @Html.DisplayFor(modelItem => item.PeriodStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PeriodEnd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartingBalance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Account.Name)
            </td>
        </tr>
}
    </tbody>
</table>
