@page
@model Coin.Web.Areas.Accounting.Pages.BudgetItems.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>BudgetItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BudgetItem.BudgetId" class="control-label"></label>
                <select asp-for="BudgetItem.BudgetId" class ="form-control" asp-items="ViewBag.BudgetId"></select>
            </div>
            <div class="form-group">
                <label asp-for="BudgetItem.Name" class="control-label"></label>
                <input asp-for="BudgetItem.Name" class="form-control" />
                <span asp-validation-for="BudgetItem.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BudgetItem.TimePeriodId" class="control-label"></label>
                <select asp-for="BudgetItem.TimePeriodId" class ="form-control" asp-items="ViewBag.TimePeriodId"></select>
            </div>
            <div class="form-group">
                <label asp-for="BudgetItem.AccountId" class="control-label"></label>
                <select asp-for="BudgetItem.AccountId" class ="form-control" asp-items="ViewBag.AccountId"></select>
            </div>
            <div class="form-group">
                <label asp-for="BudgetItem.BankSpecificTransactionTypeId" class="control-label"></label>
                <select asp-for="BudgetItem.BankSpecificTransactionTypeId" class ="form-control" asp-items="ViewBag.BankSpecificTransactionTypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="BudgetItem.TransactionDescriptionMatchPattern" class="control-label"></label>
                <input asp-for="BudgetItem.TransactionDescriptionMatchPattern" class="form-control" />
                <span asp-validation-for="BudgetItem.TransactionDescriptionMatchPattern" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BudgetItem.AmountLower" class="control-label"></label>
                <input asp-for="BudgetItem.AmountLower" class="form-control" />
                <span asp-validation-for="BudgetItem.AmountLower" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BudgetItem.AmountUpper" class="control-label"></label>
                <input asp-for="BudgetItem.AmountUpper" class="form-control" />
                <span asp-validation-for="BudgetItem.AmountUpper" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
