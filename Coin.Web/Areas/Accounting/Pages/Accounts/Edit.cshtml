@page "{id?}"
@model Coin.Web.Areas.Accounting.Pages.Accounts.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Account.Id" />
            <div class="form-group">
                <label asp-for="Account.Name" class="control-label"></label>
                <input asp-for="Account.Name" class="form-control" />
                <span asp-validation-for="Account.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.PersonId" class="control-label"></label>
                <select asp-for="Account.PersonId" class="form-control" asp-items="ViewBag.PersonId"></select>
                <span asp-validation-for="Account.PersonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.CurrencyId" class="control-label"></label>
                <select asp-for="Account.CurrencyId" class="form-control" asp-items="ViewBag.CurrencyId"></select>
                <span asp-validation-for="Account.CurrencyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.TimePeriodId" class="control-label"></label>
                <select asp-for="Account.TimePeriodId" class="form-control" asp-items="ViewBag.TimePeriodId"></select>
                <span asp-validation-for="Account.TimePeriodId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
