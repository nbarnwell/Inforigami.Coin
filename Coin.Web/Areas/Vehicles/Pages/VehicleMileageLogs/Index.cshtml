@page
@model Coin.Web.Areas.Vehicles.Pages.VehicleMileageLogs.IndexModel

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VehicleMileageLog[0].TripDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleMileageLog[0].StartMileage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleMileageLog[0].EndMileage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleMileageLog[0].Purpose)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleMileageLog[0].From)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleMileageLog[0].To)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleMileageLog[0].Vehicle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleMileageLog[0].VehicleTravelPurposeType)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.VehicleMileageLog) {
            <tr class="cursor-hand" data-href="@Url.Page("Details", new { id = item.Id })">
            <td>
                @Html.DisplayFor(modelItem => item.TripDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartMileage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndMileage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Purpose)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.From)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.To)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vehicle.Make)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleTravelPurposeType.Name)
            </td>
        </tr>
}
    </tbody>
</table>
